<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Usuario</servlet-name>
        <servlet-class>controller.Usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Instituto</servlet-name>
        <servlet-class>controller.Instituto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Curso</servlet-name>
        <servlet-class>controller.Curso</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Edicion</servlet-name>
        <servlet-class>controller.Edicion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Programa</servlet-name>
        <servlet-class>controller.Programa</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Usuario</servlet-name>
        <url-pattern>/Usuario</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Instituto</servlet-name>
        <url-pattern>/Instituto</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Curso</servlet-name>
        <url-pattern>/Curso</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Edicion</servlet-name>
        <url-pattern>/Edicion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Programa</servlet-name>
        <url-pattern>/Programa</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
